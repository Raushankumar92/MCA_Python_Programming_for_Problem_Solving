    "# Program to display binary, octal, and hexadecimal formats\n",
    "\n",
    "num = int(input(\"Enter an integer: \"))\n",
    "\n",
    "print(\"Number:\", num)\n",
    "print(\"Binary      :\", bin(num)[2:])\n",
    "print(\"Octal       :\", oct(num)[2:])\n",
    "print(\"Hexadecimal :\", hex(num)[2:].upper())\n"
   ]
